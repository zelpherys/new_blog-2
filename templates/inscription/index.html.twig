{# inscription/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Ajouter un article!
{% endblock %}
{% block body %}
	<div class="container text-center">
		<div class="row">
			<div class="col-lg-6 mx-auto mt-5">
				<h3>Ajouter un article!</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 mx-auto mt-5">
				{{ form_start(form_utilisateur) }}

				<div class="mb-3">
					<label for="" class="form-label"></label>
					{{ form_row(form_utilisateur.nom) }}
				</div>
				<div class="mb-3">
					<label for="" class="form-label"></label>
					{{ form_row(form_utilisateur.prenom) }}
				</div>
				<div class="mb-3">
					<label for="" class="form-label"></label>
					{{ form_row(form_utilisateur.email) }}
				</div>
				<div class="mb-3">
					<label for="" class="form-label"></label>
					{{ form_row(form_utilisateur.mdp) }}
				</div>
				<div class="mb-3">
					<label for="" class="form-label"></label>
					{{ form_row(form_utilisateur.adresse) }}
				</div>
				{# Ajoutez d'autres champs de formulaire ici #}
				{{ form_end(form_utilisateur) }}
			</div>
		</div>
	</div>
{% endblock %}
